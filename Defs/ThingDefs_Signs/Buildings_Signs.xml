  <!--============================== Comment ==============================-->
  <ThingDef ParentName="SignWithCustomLabelBase">
    <defName>Comment</defName>
    <label>comment</label>
    <description>Leave comments to plan ahead or mark things to be remembered.
Free to place and builds instantly. Use this for making simple comments to yourself.</description>
    <comps>
      <li Class="Dark.Signs.CompProperties_Sign">
        <canEditContent>true</canEditContent>
        <editOnPlacement>true</editOnPlacement>
        <defaultContents>Empty Comment</defaultContents>
      </li>
    </comps>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <clearBuildingArea>false</clearBuildingArea>
    <passability>Standable</passability>
    <fillPercent>0</fillPercent>
    <pathCost>0</pathCost>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <rotatable>false</rotatable>
    <building>
      <isInert>true</isInert>
      <sowTag>SupportPlantsOnly</sowTag>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
      <expandHomeArea>false</expandHomeArea>
      <isEdifice>false</isEdifice>
      <ai_chillDestination>false</ai_chillDestination>
      <ai_neverTrashThis>true</ai_neverTrashThis>
    </building>
    <graphicData>
      <texPath>Things/Buildings/Signs/Comment</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>(1,1)</drawSize>
    </graphicData>
  </ThingDef>
  
